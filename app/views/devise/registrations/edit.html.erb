<div class="container my-5">
  <h2 class="text-center mb-4">Edit Your Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :surname, class: "form-label" %>
      <%= f.text_field :surname, autocomplete: "surname", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :address, class: "form-label" %>
      <%= f.text_field :address, autocomplete: "address", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true, readonly: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Awaiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password %> <i>(leave blank if you wish to keep it unchanged)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em>Minimum of <%= @minimum_password_length %> characters required</em>
      <% end %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password %> <i>(your current password is needed to verify changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.submit "Save Changes", class: "btn btn-success w-100" %>
    </div>
  <% end %>

  <%= link_to "Go Back", :back, class: "btn btn-secondary" %>
</div>
