<div class="container my-5 p-4">
  <h2 class="text-center mb-4">Access Your Account</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false  }}) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.submit "Sign In", class: "btn btn-success w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
