<div class="mt-4 d-flex justify-content-between align-items-center">
  <h1 class="h2">Journal</h1>
  <div class="mt-2">
    <% if @journal.available? %>
      <%= link_to "Reserve", reserve_journal_path(@journal), class: "btn btn-primary" %>
    <% else %>
      <span class="text-danger">Not available</span>
      <% if @journal.reservation.present? %>
        <div class="mt-2">Reserved by: <%= @journal.reservation.user.name %></div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <h2 class="h5">Title</h2>
  <p class="text-muted"><%= @journal.title %></p>
</div>

<div class="mt-4">
  <h2 class="h5">Volume</h2>
  <p class="text-muted"><%= @journal.volume %></p>
</div>

<div class="mt-4">
  <h2 class="h5">Issue</h2>
  <p class="text-muted"><%= @journal.issue %></p>
</div>

<div class="mt-4">
  <h2 class="h5">Publish Year</h2>
  <p class="text-muted"><%= @journal.publish_year %></p>
</div>

<div class="mt-4">
  <h2 class="h5">Category</h2>
  <p class="text-muted"><%= @journal.category %></p>
</div>

<div class="mt-4">
  <h2 class="h5">Description</h2>
  <p class="text-muted"><%= @journal.description || "No description available" %></p>
</div>
