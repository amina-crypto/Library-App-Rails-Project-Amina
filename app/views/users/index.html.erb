<div class="d-flex justify-content-between align-items-center">
  <h1 class="h2">Library Users</h1>
</div>

<%= form_with url: users_path, method: :get, class: "my-4 w-100 d-flex flex-column align-items-center flex-md-row justify-content-center gap-3" do |form| %>
  <%= form.text_field :search, placeholder: "Search by name", class: "form-control", value: @query %>
  <%= form.submit "Find users", class: "btn btn-success" %>
<% end %>

<% if @users.present? %>
  <div class="table-responsive mt-5">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">
            User Name
          </th>
          <th scope="col">
            Active Reservations
          </th>
          <th scope="col">
            Current Loans
          </th>
          <th scope="col">
            Outstanding Fines
          </th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row">
              <%= link_to user.name, user, class: 'text-primary' %>
            </th>
            <td>
              <%= user.reservations.where(status: 'pending').count %>
            </td>
            <td>
              <%= user.loans.where(returned: false).count %>
            </td>
            <td>
              <%= user.loans.where(returned: false).map { |loan| loan.fine }.sum %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="mt-5">No users found in the library</div>
<% end %>
